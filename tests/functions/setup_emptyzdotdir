# setup zsh home
local name=${1:-temp}
ZSHDIR=$BASEDIR/.tmp/tests/$name
[[ -d $ZSHDIR ]] && rm -rf $ZSHDIR
mkdir -p $ZSHDIR

# setup antidote home
ANTIDOTE_HOME=$ZSHDIR/antidote_home
mkdir -p $ANTIDOTE_HOME
FAKEZDOTDIR=$BASEDIR/tests/fakezdotdir

# switch ZDOTDIR
OLD_ZDOTDIR=$ZDOTDIR
ZDOTDIR=$ZSHDIR

# vim: ft=zsh
