root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.zsh]
indent_style = space
indent_size = 2

[functions/*]
indent_style = space
indent_size = 2

[tests/**/*]
indent_style = space
indent_size = 2
