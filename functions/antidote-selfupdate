### Update antidote.
###
### usage: antidote selfupdate [-h|--help]

emulate -L zsh
setopt local_options extended_glob
0=${(%):-%x}

local o_help
zparseopts -D -M -- h=o_help -help=h || return 1

if (( $#o_help )); then
  antidote-help selfupdate
  return
fi

# update antidote
echo "Updating antidote..."
git -C "${0:A:h:h}" pull --ff --rebase --autostash

# vim: ft=zsh
