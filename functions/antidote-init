#!/usr/bin/env zsh

### Initialize the shell for dynamic bundles.
###
### usage: antidote init [-h|--help]
###        source <$(antidote init)

# This function changes how the `antidote` command works by sourcing the results of
# `antidote bundle` instead of just generating the Zsh script.

local opts
zparseopts -A opts -D -F -- h -help || return 1

if [[ -v opts[-h] ]] || [[ -v opts[--help] ]]; then
  antidote-help bundle
  return
fi

local script=(
  '#!/usr/bin/env zsh'
  'function antidote {'
  '  case "$1" in'
  '    bundle|bundles)'
  '      source <( __antidote $@ ) || __antidote $@'
  '      ;;'
  '    *)'
  '      __antidote $@'
  '      ;;'
  '  esac'
  '}'
)
printf "%s\n" "${script[@]}"
